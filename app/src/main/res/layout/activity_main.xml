<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <edu.homework2.facemaker.Face
        android:id="@+id/face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4BEBE" />

    <LinearLayout
        android:id="@+id/initialLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seekBarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color Components"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/redColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/redBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:scrollbarSize="4dp" />

        <TextView
            android:id="@+id/greenColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green "
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/greenBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255" />

        <TextView
            android:id="@+id/blueColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/blueBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255" />

        <TextView
            android:id="@+id/hairSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hair Styles" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hairButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hair" />

            <RadioButton
                android:id="@+id/eyeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eyes" />

            <RadioButton
                android:id="@+id/skinButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Skin" />
        </RadioGroup>

        <Button
            android:id="@+id/randomFaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random Face" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>